{
  "manifest_version": 3,
  "name": "下班時間計算器",
  "version": "1.0.0",
  "description": "計算彈性上班制度的下班時間，整合出勤系統查詢功能",
  "permissions": [
    "storage",
    "activeTab",
    "notifications"
  ],
  "host_permissions": [
    "https://geip.gigabyte.com.tw/*",
    "https://eipapi.gigabyte.com.tw/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "下班時間計算器",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
